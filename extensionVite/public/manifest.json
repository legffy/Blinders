{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "BlindersV",
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "32": "icon32.png"
    },
    "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],
 "action": {"default_popup":"index.html"},
   "background": { "service_worker": "background.js", "type": "module" }
}